@{
}



<h1>@Model.CurrentCategory</h1>


<div class="card-deck">

    @foreach (var item in Model.AllProduct)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="card">
                <img class="card-img-top-custom" src="@Url.Content(item.ImageThumbnailUrl)" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title ">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId"> @item.Name</a>
                    </h5>
                    <h5 class="card-text fa-pull-right">@item.Price.ToString("c")</h5>
                    <p class="card-text fa-pull-left">@item.ShortDescription</p>
                </div>

                <div class="card-footer">
                    <small class="text-muted">Last updated 3 mins ago</small>
                </div>
            </div>
        </div>
    }

</div>



