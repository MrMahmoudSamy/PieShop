@model IEnumerable<Category>

<li class="nav-item dropdown">
    <a  asp-controller="Product"
       asp-action="Index"
       class="nav-link dropdown-toggle" data-toggle="dropdown">Pies<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li class="dropdown-item">
                <a asp-controller="Product" asp-action="List"
                  asp-route-id="@category.CategoryId" asp-route-slug="@category.CategorySlug">@category.CategoryName</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item" asp-controller="Product" asp-action="List" asp-route-id="" asp-route-slug="">View all pies</a>
        </li>
    </ul>
</li>